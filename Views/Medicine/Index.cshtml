@model List<EntityLayer.Concrete.Medicine>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>İlaç Adı</th>
            <th>İlaç Açıklama</th>
            <th>İlaç Ücreti</th>
            <th>İlaç Stok</th>
            <th>Son Kullanma Tarihi</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Görüntüle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MedicineId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.ExpiryDate</td>
                <td><a href="/Medicine/DeleteMedicine/@item.MedicineId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Medicine/UpdateMedicine/@item.MedicineId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Medicine/MedicineDetails/@item.MedicineId" class="btn btn-info">Görüntüle</a></td>
            </tr>
        }
    </table>
    <a href="/Medicine/AddMedicine" class="btn btn-dark">İlaç Ekle</a>
</div>

